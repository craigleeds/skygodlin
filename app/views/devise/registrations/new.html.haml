%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p
    = f.label :name
    %br/
    = f.text_field :name, :value => "#{name}"
  %p
    = f.label :email
    %br/
    = f.email_field :email
  %p
    = f.label :password
    %br/
    = f.password_field :password, :value => :new_random_password
  %p
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, :value => :new_random_password
  %p
    = f.submit "Sign up"
= render :partial => "devise/shared/links"

